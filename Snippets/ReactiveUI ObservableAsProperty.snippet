<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Define Observable as Property</Title>
      <Description>Define property ObservableAsPropertyHelper used</Description>
      <Shortcut>propoap</Shortcut>
    </Header>
    <Snippet>
        <Declarations>
          <Literal>
            <ID>type</ID>
            <ToolTip>Property Type</ToolTip>
            <Default>int</Default>
          </Literal>
          <Literal>
            <ID>property</ID>
            <ToolTip>Propety Name</ToolTip>
            <Default>MyProperty</Default>
          </Literal>          
        </Declarations>
      <Code Language="csharp">
                <![CDATA[
public $type$ $property$
{
    get { return _$property$.Value; }
}
private readonly ObservableAsPropertyHelper<$type$> _$property$;
]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>